<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Party Mode Badge -->
    <TextView
        android:id="@+id/partyModeBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/party_mode"
        android:textSize="14sp"
        android:textColor="@color/accent"
        android:background="@drawable/party_mode_badge"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Spinner Wheel Container -->
    <FrameLayout
        android:id="@+id/spinnerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/partyModeBadge"
        app:layout_constraintBottom_toTopOf="@id/challengeContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.4">

        <!-- Spinner Wheel Background -->
        <ImageView
            android:id="@+id/spinnerWheel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/spinner_wheel"
            android:contentDescription="Spinner Wheel"
            android:clickable="true"
            android:focusable="true" />

        <!-- Spinner Pointer -->
        <ImageView
            android:id="@+id/spinnerPointer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/spinner_pointer"
            android:contentDescription="Spinner Pointer"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="-20dp" />

        <!-- Tap to Spin Text -->
        <TextView
            android:id="@+id/tapToSpinText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_spin"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:background="@drawable/tap_to_spin_background"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_gravity="center" />

    </FrameLayout>

    <!-- Challenge Display Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/challengeContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/surface"
        app:layout_constraintBottom_toTopOf="@id/spinButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Challenge Category -->
            <TextView
                android:id="@+id/challengeCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Challenge Text -->
            <TextView
                android:id="@+id/challengeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/challenge_text"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:minHeight="80dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Spin Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/spinButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="@string/spin_button"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/accent"
        android:layout_marginBottom="32dp"
        app:cornerRadius="32dp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
